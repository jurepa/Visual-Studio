<Page
    x:Class="ReproductorMusica.Views.LuckyChop"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ReproductorMusica.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ScrollViewer>
        <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Pivot LeftHeader="Canciones" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Margin="50" >
                <PivotItem Header="Behroozi">
                    <StackPanel Orientation="Vertical">
                        <Image Name="foto1" Source="\Assets\Images\rluckychops.png" Stretch="None" RelativePanel.AlignHorizontalCenterWithPanel="True" />
                        <MediaPlayerElement Name="behroozi" RelativePanel.Below="foto1" RelativePanel.AlignHorizontalCenterWithPanel="True" Source="ms-appx:///Assets/Music/behroozi.mp3" AreTransportControlsEnabled="True"/>
                    </StackPanel>
                </PivotItem>
            </Pivot>
        </RelativePanel>
    </ScrollViewer>
</Page>
