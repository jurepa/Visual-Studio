    xmlns:local="using:Canvas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.TopAppBar>
        <CommandBar>
            <AppBarButton x:ConnectionId='1' Icon="Edit"                      />
        </CommandBar>
    </Page.TopAppBar>
    <Grid Background="White">
        <Canvas>
            <Ellipse x:ConnectionId='2' Name="Cabeza" Fill="Black" Width="200" Height="200" Canvas.Left="550" Canvas.Top="300"/>
            <Ellipse Fill="Black" Width="100" Height="100" Canvas.Left="500" Canvas.Top="250"/>
            <Ellipse Fill="Black" Width="100" Height="100" Canvas.Left="700" Canvas.Top="250"/>
        </Canvas>
    </Grid>
</Page>

